
Bootstrap: docker
From: rocker/r-base:3.6.3



%labels
    Author thomas cokelaer

%post

    apt-get update -y --fix-missing #&& apt-get install -y software-properties-common && add-apt-repository universe

    # prevent prompt interaction
    DEBIAN_FRONTEND="noninteractive" TZ="Europe" apt-get install -y tzdata

    # other dependencies
    apt-get install -y libxml2-dev libcurl4-openssl-dev libssl-dev 

    Rscript -e "install.packages('BiocManager')"
    Rscript -e 'BiocManager::install(version="3.10")'
    Rscript -e "BiocManager::install(c('RIPSeeker'), site_repository='http://cran.us.r-project.org', ask=FALSE)"
    Rscript -e "BiocManager::install(c('RIPSeekerData'), site_repository='http://cran.us.r-project.org', ask=FALSE)"
    Rscript -e "BiocManager::install(c('biomart'), site_repository='http://cran.us.r-project.org', ask=FALSE)"

    apt-get autoremove -y && apt-get clean && rm -rf /var/lib/apt/lists/*

%environment
    export LC_ALL=C.UTF-8

%runscript
