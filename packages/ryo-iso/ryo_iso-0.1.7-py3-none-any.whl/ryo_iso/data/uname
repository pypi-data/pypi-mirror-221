#!/bin/bash
# FIXME: This should probably be done with sed or something
CHROOT_KERNEL=$(ls -c /boot/initrd.img-* /boot/config-* /boot/System.map-* 2> /dev/null | head -1 | cut -f2- -d\- | sort -nr | head -1)
if [ -z $CHROOT_KERNEL ]; then
  CHROOT_KERNEL=$(ls -c /usr/src/linux-headers-* 2> /dev/null | head -1 | cut -f3- -d\- | sort -nr | head -1)
fi
export CHROOT_KERNEL
export SYSTEM_KERNEL=$(/bin/uname.orig -r)
CHROOT_UNAME=$($0.orig $@ | sed "s/$SYSTEM_KERNEL/$CHROOT_KERNEL/")
echo $CHROOT_UNAME
